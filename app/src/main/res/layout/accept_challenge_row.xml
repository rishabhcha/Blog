<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/accept_challenger_name"
            android:textStyle="bold"
            android:text="CHALLENGER"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="@color/cardview_shadow_start_color"
            android:layout_height="200dp"
            android:layout_width="150dp"
            android:layout_marginRight="2dp"
            android:id="@+id/accept_challenger_pic"
            app:srcCompat="@mipmap/ic_person_white_36dp" />


        <ImageButton
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@color/cardview_shadow_start_color"
            android:layout_height="200dp"
            android:layout_width="150dp"
            android:layout_marginLeft="2dp"
            android:id="@+id/accept_acceptor_pic"
            app:srcCompat="@mipmap/ic_person_white_36dp" />

    </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/colorPrimaryDark"
            app:srcCompat="@android:drawable/ic_menu_send"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="10dp"
            android:id="@+id/accept_challenge_btn" />

    </LinearLayout>


</android.support.v7.widget.CardView>