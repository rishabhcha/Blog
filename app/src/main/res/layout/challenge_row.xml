<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                app:srcCompat="@mipmap/ic_person_white_36dp"
                android:id="@+id/challenge_challenger_pic"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@color/cardview_shadow_start_color"
                android:layout_height="200dp"
                android:layout_width="150dp"
                android:layout_marginRight="2dp" />

            <ImageView
                app:srcCompat="@mipmap/ic_person_white_36dp"
                android:id="@+id/challenge_acceptor_pic"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:background="@color/cardview_shadow_start_color"
                android:layout_height="200dp"
                android:layout_width="150dp"
                android:layout_marginLeft="2dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="CHALLENGER"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginRight="2dp"
                android:id="@+id/challenge_challenger_name" />
            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="ACCEPTOR"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginLeft="2dp"
                android:id="@+id/challenge_acceptor_name" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="160dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/ic_favorite_border_black_24dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="60dp"
                    android:id="@+id/challenge_likebtn_1" />

                <TextView
                    android:text="0"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="12dp"
                    android:id="@+id/challenge_like_1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/ic_favorite_border_black_24dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="60dp"
                    android:id="@+id/challenge_likebtn_2" />

                <TextView
                    android:text="0"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="12dp"
                    android:id="@+id/challenge_like_2" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>