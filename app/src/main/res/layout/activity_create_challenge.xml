<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_challenge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rishabh.blog.CreateChallengeActivity">


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_menu_send"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="48dp"
        android:id="@+id/selectChallengerBtn"
        app:backgroundTint="?attr/colorPrimaryDark" />

    <ImageButton
        android:layout_height="350dp"
        app:srcCompat="@mipmap/ic_person_white_36dp"
        android:layout_marginTop="22dp"
        android:id="@+id/selectChallengePic"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />
</RelativeLayout>
