<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_blog_single"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rishabh.blog.BlogSingleActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@mipmap/ic_photo_white_48dp"
        android:id="@+id/singleBlogImage"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="30dp"
        android:background="@color/cardview_shadow_start_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/singleBlogTitle"
        android:padding="20dp"
        android:text="Blog Title Goes Here"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_below="@+id/singleBlogImage"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:text="Blog Desc Goes Here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/singleBlogDesc"
        android:padding="20dp"
        android:textSize="16sp"
        android:layout_below="@+id/singleBlogTitle"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Remove Post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/singleRemoveBtn"
        android:visibility="invisible" />
</RelativeLayout>
